<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/mortgage_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/home_value"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/azure"
                />
            <EditText
                android:id="@+id/home_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="20sp"
                android:hint="@string/home_value_hint"
                android:digits="0123456789.,"
                android:inputType="numberDecimal"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$"
                android:textSize="20sp"
                android:gravity="fill"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/down_payment"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/azure"
                android:lines="2"
                />
            <EditText
                android:id="@+id/down_payment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="20sp"
                android:hint="@string/down_payment_hint"
                android:inputType="numberDecimal"
                android:digits="0123456789.,"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$"
                android:textSize="20sp"
                android:gravity="fill"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/interest_rate"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/azure"
                android:lines="2"
                android:gravity="start"
                />
            <EditText
                android:id="@+id/interest_rate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="20sp"
                android:hint="@string/apr_hint"
                android:inputType="numberDecimal"
                android:digits="0123456789."/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="%"
                android:textSize="20sp"
                android:gravity="fill"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/terms"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/azure"
                android:lines="2"
                android:gravity="start"
                />
            <Spinner
                android:id="@+id/terms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:spinnerMode="dropdown"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Yrs"
                android:textSize="20sp"
                android:gravity="fill"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/property_tax_rate"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/azure"
                android:lines="2"
                android:gravity="start"
                />
            <EditText
                android:id="@+id/property_tax_rate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="20sp"
                android:hint="@string/apr_hint"
                android:inputType="numberDecimal"
                android:digits="0123456789."/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="%"
                android:textSize="20sp"
                android:gravity="fill"
                />
        </LinearLayout>

        <Button
            android:id="@+id/calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calculate"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:background="@color/azure"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>
</ScrollView>